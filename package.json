{
  "private": true,
  "name": "preact-starter",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "prebuild": "npm run tw-build",
    "build": "cross-env NODE_OPTIONS=--openssl-legacy-provider preact build",
    "serve": "sirv build --port 8080 --cors --single",
    "dev": "concurrently \"npm run preact-watch\" \"npm run tw-watch\"",
    "preact-watch": "cross-env NODE_OPTIONS=--openssl-legacy-provider preact watch",
    "tw-watch": "npx tailwindcss -i ./src/style/tw-input.css -o ./src/style/index.css --watch",
    "tw-build": "npx tailwindcss -i ./src/style/tw-input.css -o ./src/style/index.css --minify",
    "lint": "eslint src",
    "test": "jest"
  },
  "eslintConfig": {
    "extends": "preact",
    "ignorePatterns": [
      "build/"
    ]
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.3",
    "concurrently": "^8.0.1",
    "cross-env": "^7.0.3",
    "daisyui": "^2.51.6",
    "enzyme": "^3.11.0",
    "enzyme-adapter-preact-pure": "^4.0.0",
    "eslint": "^8.30.0",
    "eslint-config-preact": "^1.3.0",
    "jest": "^27.0.0",
    "jest-preset-preact": "^4.0.5",
    "preact-cli": "^3.4.2",
    "sirv-cli": "^2.0.2",
    "tailwindcss": "^3.3.2"
  },
  "dependencies": {
    "preact": "^10.11.3",
    "preact-render-to-string": "^5.2.6",
    "preact-router": "^3.2.1"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js",
      "<rootDir>/tests/__mocks__/setupTests.js"
    ]
  }
}
